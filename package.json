{
  "name": "packages-for-work",
  "version": "1.0.0",
  "description": "Monorepo to temporarily host some packages for work until we set up our new Org",
  "type": "module",
  "scripts": {
    "build": "nx run-many --target=build --exclude=@mikesprague/package-starter",
    "bump": "lerna version --no-private --no-push",
    "prebuild": "nx run-many --targets=typecheck,clean --exclude=@mikesprague/package-starter",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">= 18.x",
    "npm": ">= 8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mikesprague/packages-for-work.git"
  },
  "publishConfig": {
    "@mikesprague:registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/packages-for-work/issues"
  },
  "homepage": "https://github.com/mikesprague/packages-for-work#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.22.6",
    "@parcel/packager-ts": "^2.9.2",
    "@parcel/transformer-typescript-types": "^2.9.2",
    "@types/node": "20.3.3",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.61.0",
    "changelogen": "0.5.4",
    "cross-env": "7.0.3",
    "cz-git": "1.6.1",
    "documentation": "14.0.2",
    "eslint": "8.44.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "lerna": "7.1.1",
    "nx": "16.5.0",
    "parcel": "2.9.3",
    "prettier": "2.8.8",
    "prettier-eslint": "15.0.1",
    "rimraf": "5.0.1",
    "typescript": "5.1.6"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": false,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "allowImportExportEverywhere": true,
      "parser": "@typescript-eslint/parser",
      "project": [
        "./tsconfig.json"
      ],
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "ignorePatterns": [
      "**/.history/*",
      "**/node_modules/*",
      "**/dist/*"
    ],
    "rules": {
      "import/prefer-default-export": "off",
      "no-console": "warn",
      "import/extensions": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "release": {
    "preset": "conventionalcommits"
  }
}
